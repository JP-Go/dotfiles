#vim: set ft=bash

if [[ -f /usr/bin/lsd ]]; then
    alias ls="lsd " 
    alias la="lsd -a"
    alias ll="lsd -lh"
    alias l="lsd -lh"
fi
alias vim="nvim"
alias v="nvim"

alias gita="git add"
alias gitc="git commit"
alias gitd="git diff"
alias gits="git status"
alias gitp="git push"

alias tlmgr="$TEXMFDIST/scripts/texlive/tlmgr.pl --usermode"
alias goto=". ~/.dotfiles/scripts/goto.sh"
